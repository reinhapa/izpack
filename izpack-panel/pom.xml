						<exclude>com.izforge.izpack.panels.userinput.UserInputPanelTest</exclude>
						<exclude>com.izforge.izpack.panels.userinput.console.password.ConsolePasswordGroupFieldTest</exclude>
					</excludes>
				</configuration>
			</plugin>
		</plugins>
	</build>

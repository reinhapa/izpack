	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>izpack-api</artifactId>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>izpack-tools</artifactId>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
